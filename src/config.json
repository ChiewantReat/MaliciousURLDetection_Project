{
  "data_path": "../data/malicious_phish.csv",
  "results_dir": "../results",

  "random_seed": 42,

  "splits": {
    "train": 0.7,
    "val": 0.15,
    "test": 0.15
  },

  "smote": {
    "enabled": true,
    "random_state": 42
  },

  "logistic_regression": {
    "C": [0.1, 1.0, 10.0],
    "penalty": ["l2"],
    "max_iter": 1000
  },

  "random_forest": {
    "n_estimators": [100, 200],
    "max_depth": [null, 20, 40],
    "class_weight": [null, "balanced"]
  },

  "mlp": {
    "hidden_layer_sizes": [
      [64],
      [128, 64]
    ],
    "activation": ["relu"],
    "learning_rate_init": [0.001, 0.0005],
    "batch_size": [64, 128],
    "max_iter": 200
  },

  "isolation_forest": {
    "n_estimators": 200,
    "max_samples": "auto",
    "contamination": "auto"
  }
}
